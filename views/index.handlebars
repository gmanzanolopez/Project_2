<div>{{>nav/nav-block}}</div>

<div class="row">


    {{#each items}}
    <div class="card items text fText" style="width: 18rem;">
        <div class="image">
            <img src="/image/defImg.jpg" class="card-img-top" alt="stockImage">
        </div>
        <div class="card-body cardCol">
            <h5 class="card-title uLine">{{dataValues.itemName}}</h5>
            <p>{{#if dataValues.replica}}Replica{{else}}Authentic{{/if}}</p>
            <div class="tBord">
                <p class="card-text">{{dataValues.descript}}</p>
            </div>
        </div>
        <div class="card-body cardCol">
            <p>Current bid:{{dataValues.highestBid}}</p>
            <a href="/sell">Bid</a>
        </div>
    </div>
    {{/each}}


</div>
<!--Return to top button-->
<button onclick="topFunction()" id="homeBtn" class="submit text fText" title="Go to top">Return to Top</button>

